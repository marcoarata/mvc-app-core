include ../../includes/head


<main class="flex flex-col lg:flex-row lg:justify-between">
    <section class="ml-6">
        <h1 class="text-3xl text-sky-500 mt-4">Listado de Clientes</h1>

        <table class="table-auto mt-6">

            <thead>
            <tr>
                <th class="px-8 py-2 border border-sky-500">RUT</th>
                <th class="px-8 py-2 border border-sky-500">Nombre</th>
                <th class="px-8 py-2 border border-sky-500">Acciones</th>
            </tr>
            </thead>

            <tbody>

            if Object.keys(customers).length > 0

            each val, index in customers
                <tr class="border border-sky-500">
                    <td class="px-2 py-1 border border-sky-500">#{ val.rut }</td>
                    <td class="px-2 pl-6 py-1 border border-sky-500">#{ val.name }</td>
                    <td class="flex flex-col gap-2 px-2 py-2 lg:flex-row lg:justify-between">
                        <a href="/customer/#{ val.id }/show" class="text-center bg-transparent hover:bg-sky-500 text-sky-500 font-medium hover:text-white py-1 border border-sky-500 hover:border-transparent rounded lg:px-8">Ver</a>
                        <a href="/customer/#{ val.id }/edit" class="text-center bg-transparent hover:bg-green-500 text-green-500 font-medium hover:text-white py-1 border border-green-500 hover:border-transparent rounded lg:px-6">Actualizar</a>
                        <form class="inline-flex" action="/customer/#{ val.id }/delete" method="POST"><input type="hidden" name="_method" value="DELETE"><button type="submit" class="bg-transparent hover:bg-red-600 text-red-600 font-medium hover:text-white py-1 pr-8 pl-8 border border-red-600 hover:border-transparent rounded">Eliminar</button></form>
                    </td>
                </tr>
            </tbody>
        </table>

        <br>
    </section>

    <section class="pl-8 pb-20 mt-1 lg:mt-8 mr-8">

        <a class="bg-transparent hover:bg-sky-500 text-sky-500 font-medium hover:text-white py-2 px-4 border border-sky-500 hover:border-transparent rounded" href="/customer/new">+ AÃ±adir Nuevo Cliente</a>

    </section>

</main>


