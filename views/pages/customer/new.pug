<h1 class="text-3xl text-sky-500 mt-4 p-8">Nuevo Cliente</h1>

<div class="max-w-md mx-auto bg-white shadow-md p-8 mt-8 rounded bg-gray-200">
    <h1 class="text-2xl font-semibold mb-6">Formulario de Cliente</h1>

    <form action="/customer" method="post">

        <div class="mb-4">
            <label for="name" class="block text-sm font-medium text-gray-700">Nombre:</label>
            <input type="text" id="name" name="name" class="py-2 border mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" required>
        </div>

        <div class="mb-4">
            <label for="rut" class="block text-sm font-medium text-gray-700">RUT:</label>
            <input type="text" id="rut" name="rut" class="py-2 border mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" required>
        </div>

        <div class="mb-4">
            <label for="email" class="block text-sm font-medium text-gray-700">Email:</label>
            <input type="email" id="email" name="email" class="py-2 border mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" required>
        </div>

        <div class="mb-6">
            <label for="whatsapp" class="block text-sm font-medium text-gray-700">WhatsApp:</label>
            <input type="text" id="whatsapp" name="whatsapp" class="py-2 border mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" required>
        </div>

        <div class="flex items-center justify-end">
            <button type="submit" class="inline-flex items-center bg-transparent hover:bg-sky-500 text-sky-500 font-medium hover:text-white py-2 px-4 border border-sky-500 hover:border-transparent rounded">Enviar</button>
        </div>

    </form>
</div>


include ../../includes/footer